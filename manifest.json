{
  "manifest_version": 1,
  "version": "1.0.0",
  "name": "Hack Cookies",
  "description": "Edit cookies related to the current page and all its sub-frames right from a popup",
  
  "permissions": [
    "cookies",
    "tabs",
    "notifications",
    "*://*/*"
  ],

  "browser_action":{
    "default_popup": ""
  },

  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  }
}
