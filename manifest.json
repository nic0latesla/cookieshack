{
  "manifest_version": 2,
  "version": "0.0.1",
  "name": "Cookie Netflix",
  "description": "Import Cookie Netflix",

  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png"
  },

  "permissions": [
    "cookies",
    "tabs",
	"http://*/*",
	"https://*/*"
  ],

  "browser_action":{
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    },
    "default_popup": "data/popup/popup.html"
  },

  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },

  "web_accessible_resources": ["data/popup/popup.js","data/popup/popup.html"]
}
